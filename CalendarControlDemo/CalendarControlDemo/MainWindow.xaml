<Window x:Class="CalendarControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <StackPanel>
        <Viewbox Stretch="Uniform">
            <Calendar
                SelectedDate="01.01.2022"
                SelectedDatesChanged="myCalendar_SelectedDatesChanged"
                x:Name="MyCalendar"
                DisplayMode="Month">
                <Calendar.BlackoutDates>
                    <CalendarDateRange Start="03.05.2021" End="03.09.2021" />
                </Calendar.BlackoutDates>

            </Calendar>
        </Viewbox>
        <TextBlock x:Name="MyTextBlock"></TextBlock>
    </StackPanel>
</Window>