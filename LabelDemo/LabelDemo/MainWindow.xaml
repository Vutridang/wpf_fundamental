<Window x:Class="LabelDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Margin="16"
               BorderThickness="1"
               BorderBrush="Black"> 
            <StackPanel Orientation="Horizontal">
                <Image Width="32" Source="https://pics.freeicons.io/uploads/icons/png/11685872171607043059-512.png"></Image>
                <AccessText FontSize="32" Text="Message"></AccessText>
            </StackPanel>
        </Label>
        <TextBox
            Margin="16, 16, 16, 0"
            FontSize="32"></TextBox>
    </StackPanel>
</Window>
